<h2 class="uk-heading-bullet">Pending your confirmation</h2>
<div class="uk-flex uk-flex-stretch uk-flex-center uk-flex-wrap" id="pending-confirmations">
  <% if @pending_confirmations.count > 0 %>
    <% @pending_confirmations.each do |pending_confirmation| %>
      <%= render partial: 'pending_confirmations', locals: { pending_confirmation: pending_confirmation } %>
    <% end %>
  <% else %>
    <div class="uk-margin">No pending confirmations founded</div>
  <% end %>
</div>