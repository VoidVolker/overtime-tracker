<div class="uk-margin uk-flex uk-flex-center">
  <div class="uk-card uk-card-body uk-card-default">
    <h2>Log in</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'uk-width-auto'}) do |f| %>
      <div>
        <%= f.label :email, class: 'uk-form-label'  %>
        <div class="uk-form-controls">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'uk-input uk-form-small uk-width-auto' %>
        </div>
      </div>

      <div class="uk-margin">
        <%= f.label :password, class: 'uk-form-label' %>
        <div class="uk-form-controls">
          <%= f.password_field :password, autocomplete: "current-password", class: 'uk-input uk-form-small uk-width-auto' %>
        </div>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="uk-margin uk-align-center">
          <%= f.check_box :remember_me, class: 'uk-checkbox' %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions uk-margin">
        <%= f.submit 'Log in', class: 'uk-button uk-button-primary' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
