<tr>
  <td><%= post.id %></td>
  <td><%= post.user.full_name %></td>
  <td><%= post.date %></td>
  <td><%= post.overtime_request %></td>
  <td><%= link_to truncate(post.rationale), post %></td>
  <td class="uk-text-center"><%= status_label post.status, 'uk-align-center' %></td>
  <td>
    <%= link_to 'Edit', edit_post_path(post), id: "edit_#{post.id}" if policy(post).update? %>
  </td>
  <td>
    <%= link_to(
      'Delete',
      post_path(post),
      method: :delete,
      id: "delete_#{post.id}",
      data: { confirm: "Are you sure want to delete the post '#{post.id}'?"}
    ) %>
  </td>
</tr>